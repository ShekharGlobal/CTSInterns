<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


	<!-- Define Library Bean with Map Injection -->
	<bean id="library" class="com.cts.map.Library">
		<property name="books">
			<map>
				<entry key="The Alchemist" value="Paulo Coelho" />
				<entry key="Clean Code" value="Robert C. Martin" />
				<entry key="Spring in Action" value="Craig Walls" />
			</map>
		</property>
	</bean>
</beans>
    